@model IEnumerable<SolairxExample.Model.SpamTbl>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-4"><h1>Spam Table</h1></div>
    <div class="col-4"></div>
    <div class="col-4"><a asp-action="Create" class="btn btn-primary">Create New</a></div>
</div>
<br />
<br />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.Label("Name")
            </th>

            <th>
                @Html.DisplayNameFor(model => model.DateModified)
            </th>
            <th>Admin</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.SpamId">@item.LastName, @item.FirstName</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateModified)
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.SpamId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
